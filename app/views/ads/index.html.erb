<!-- the list of the ads -->

<section>
	<div class="container">
		<div class="row mb-5">
			<ul class="nav mb-3" data-isotope-filters="" data-isotope-id="types">
				<li class="nav-item">
					<a class="nav-link .js-filter-initied" href="#" data-filter="*">Tout les types d'annonces</a>
				</li>
				<li class="nav-item">
					<a class="nav-link .js-filter-initied active" href="#" data-filter="<%= Type.find(2).name %>"><%= Type.find(2).name %></a>
				</li>
				<li class="nav-item">
					<a class="nav-link .js-filter-initied active" href="#" data-filter="<%=Type.find(1).name%>"><%=Type.find(1).name%></a>
				</li>
				<li class="nav-item">
					<a class="nav-link .js-filter-initied active" href="#" data-filter="<%=Type.find(3).name%>"><%=Type.find(3).name%></a>
				</li>
			</ul>	
		</div>
		<div class="row " data-isotope-collection="" data-isotope-id="types">
			<div class="container">
				<% @ad.each do |ad| %>
				<div class="row">
					<div class="col-sm-4" data-isotope-item="" data-category="<%= ad.type.name %>">
						<div class="card shadow ">
							<h5 class="card-header"><%= ad.title%></h5>
							<div class="card-body test">
								<p class="card-text"><%= ad.description %>
								</p>
								<%= link_to "Voir l'annonce", ad_path(ad), class: "btn btn-primary btn-sm" %>
							</div>
						</div>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</section>

