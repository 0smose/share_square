<section>
	<div class="container">
		<div class="row">
			<!-- Partial for the dashboard -->
			<%= render 'admins/dashboard' %>
			<!-- Profile -->
			<div class="col-sm-12 col-md-9">
				<div class="container">
					<!-- Title -->
					<div class="row">
						<div class="col">
							<h4 class="p-2 bg-primary-alt"><i class="fas fa-user-friends text-primary"></i> Profil utilisateur</h4>
						</div>
					</div>
					<!-- Profile -->
					<div class="row mx-2">
						<div class="col">
							<div class="card">
								<div class="card-body">
									<div class="d-flex align-items-center">
										<div class="card-text">
											<%= user_avatar(@user.id, "avatar avatar-lg") %>
										</div>
										<div class="card-text ml-2">
											<h5 class="m-0 p-0">
												<!-- Name -->
												<%= @user.first_name %> <%= @user.last_name %>
												<!-- Display admin if admin -->
												<% if @user.is_admin? == true %>
												<span class="text-small text-primary"> Admin</span> 
												<% end %>
											</h5>
											<%= @user.email %></div>
										</div>
										<div class="card-text mt-2"><b>Description:</b> <%= @user.description %></div>
										<div class="card-text mt-2"><b>Comp√©tence(s):</b> <%= @user.skills %></div>

										<div class="card-text mt-2">
											<%= link_to "Editer le profil", edit_admins_user_path(params[:id]), class: "btn btn-sm btn-primary" %>
											<%= link_to 'Supprimer le compte', admins_user_path(@user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm ml-1" %></div> 
										</div>
									</div>
								</div>
							</div>

							<!-- User ads -->
							<div class="row mx-2">
								<div class="col">
									<div class="h3 mb-3 mt-1 border-bottom border-gray">Ses annonces</div>
									<% if @user.ads[0] == nil %> 
									<p>L'utilisateur n'a pas encore d'annonces en ligne.</p>
									<% else %> 
										<%= render 'user_ad_cards_admin_dashboard' %>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>